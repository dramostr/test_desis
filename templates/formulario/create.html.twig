{% extends 'base.html.twig' %}

{% block title %}Formulario de votación
{% endblock %}

{% block body %}

	<div class="container-fluid p-5">

		<div class="container">
			<div>

				<div class="card shadow">
					<div class="card-body">

						<form action="">

							<h5>Formulario de votación</h5>
							<hr>
							<div class="mb-3 mt-4">
								<label for="nombreCompleto" class="form-label fw-bolder">Nombre y apellido</label>
								<input type="text" class="form-control" id="nombreCompleto" placeholder="Ingrese un nombre" require>
							</div>
							<div class="mb-3">
								<label for="alias" class="form-label fw-bolder">Alias</label>
								<input type="text" class="form-control" id="alias" placeholder="usuario_prueba" require>
							</div>
							<div class="mb-3">
								<label for="rut" class="form-label fw-bolder">Rut</label>
								<input type="text" class="form-control" id="rut" placeholder="11111111-1">
							</div>
							<div class="mb-3">
								<label for="exampleFormControlInput1" class="form-label fw-bolder">Email</label>
								<input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
							</div>

							<div class="row">
								<div class="col-6">
									<div class="mb-3">
										<label for="exampleFormControlInput1" class="form-label fw-bolder">Región</label>
										<select class="form-select" aria-label="Default select example" id="exampleFormControlInput1">
											<option selected value="0">Seleccione una region</option>
											<option value="1">One</option>
											<option value="2">Two</option>
											<option value="3">Three</option>
										</select>
									</div>
								</div>
								<div class="col-6">
									<div class="mb-3">
										<label for="exampleFormControlInput1" class="form-label fw-bolder">Comuna</label>
										<select class="form-select" aria-label="Default select example" id="exampleFormControlInput1">
											<option selected value="0">Seleccione una comuna</option>
											<option value="1">One</option>
											<option value="2">Two</option>
											<option value="3">Three</option>
										</select>
									</div>
								</div>
							</div>

							<div class="mb-3">
								<label for="exampleFormControlInput1" class="form-label fw-bolder">Candidato</label>
								<select class="form-select" aria-label="Default select example" id="exampleFormControlInput1">
									<option selected value="0">Seleccione un candidato</option>
									<option value="1">One</option>
									<option value="2">Two</option>
									<option value="3">Three</option>
								</select>
							</div>

							<div class="row pb-5">
								<label for="exampleFormControlInput1" class="form-label fw-bolder">Como se entero de nosotros</label>
								<div class="col-3">
									<div class="form-check">
										<input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
										<label class="form-check-label" for="flexCheckDefault">
											Web
										</label>
									</div>
									<div class="form-check">
										<input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
										<label class="form-check-label" for="flexCheckChecked">
											Tv
										</label>
									</div>
								</div>
								<div class="col-3">
									<div class="form-check">
										<input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
										<label class="form-check-label" for="flexCheckDefault">
											Redes sociales
										</label>
									</div>
									<div class="form-check">
										<input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
										<label class="form-check-label" for="flexCheckChecked">
											Amigo
										</label>
									</div>
								</div>
								<div class="col-6"></div>
							</div>

							<div>
								<button type="button" class="btn btn-primary">Votar</button>
							</div>

						</form>

					</div>
				</div>


			</div>
		</div>


	</div>

    


{% endblock %}
